<h1>Example App: Home</h1>

<div class="grid-container">
    {{#each news}}
    <article style="  box-shadow: -1px 4px 2px -2px grey;">
          <h3 style="background:#dedede; border: 1px solid #bbb; padding:10px; margin:10px; " >
             <a class="js-link" href="{{link}}"> {{title}}</a> 
             <button class="save-story">Save {{$id}}</button>
        </h3> 
         <div class="js-summary" style="padding:20px; padding-top:0px;">
             {{summary}}
        </div>
    </article>
{{/each}}
</div>

